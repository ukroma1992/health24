<div class="row">
  <%= form_tag import_commits_path, method: :post, class: "col s12" do %>
    <div class="row">
      <div class="input-field col s12">
        <%= text_field_tag :user_name, '', class: 'validate', required: "required", placeholder: 'Username' %>
      </div>

      <div class="input-field col s12">
        <%= text_field_tag :repository, '', class: 'validate', required: "required", placeholder: 'Repository' %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action"><%= submit_tag 'Import commits' %>
        <i class="material-icons right">send</i>
      </button>
    </div>
  <% end %>
</div>


<% if notice %>
  <script type="text/javascript">
    Materialize.toast('<%= notice %>', 4000)
  </script>
<% end %>
<% if alert %>
  <script type="text/javascript">
    Materialize.toast('<%= alert %>', 4000)
  </script>
<% end %>